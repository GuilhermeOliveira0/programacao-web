@model IEnumerable<projetoFornecedor.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Lista de Produtos</h3>
            <a asp-action="Create" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle me-1"></i> Novo Produto
            </a>
        </div>

        <div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Nome</th>
                        <th>Preço</th>
                        <th>Fornecedor</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>R$ @item.Preco.ToString("F2")</td>
                            <td>@item.Fornecedor?.Nome</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.ProdutoId" class="btn btn-sm btn-outline-warning me-1">
                                    <i class="bi bi-pencil-square me-1"></i> Editar
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ProdutoId" class="btn btn-sm btn-outline-info me-1">
                                    <i class="bi bi-info-circle me-1"></i> Detalhes
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ProdutoId" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash me-1"></i> Excluir
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
