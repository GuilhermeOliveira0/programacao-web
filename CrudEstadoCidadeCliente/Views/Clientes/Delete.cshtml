@model CrudEstadoCidadeCliente.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Excluir Cliente</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="text-danger">Você tem certeza que deseja excluir este cliente?</h3>
            <hr />

            <div>
                <h4>Cliente</h4>
                <dl class="row">
                    <!-- Nome -->
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>

                    <!-- Sexo -->
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Sexo)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Sexo)
                    </dd>

                    <!-- Idade -->
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Idade)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Idade)
                    </dd>

                    <!-- Data de Nascimento -->
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.DataNascimento)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.DataNascimento)
                    </dd>

                    <!-- Cidade -->
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Cidade)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Cidade.Nome)
                    </dd>
                </dl>
            </div>

            <!-- Formulário de Exclusão -->
            <form asp-action="Delete">
                <input type="hidden" asp-for="Cod" />
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Excluir
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar para a lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
