@model CrudEstadoCidadeCliente.Models.Cidade

@{
    ViewData["Title"] = "Cadastrar Nova Cidade";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Cadastrar Nova Cidade</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-warning text-center">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-3">Informações da Cidade</h4>
                    <hr />

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label fw-bold"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EstadoId" class="form-label fw-bold">Estado</label>
                            @if (ViewData["EstadoId"] != null)
                            {
                                <select asp-for="EstadoId" class="form-select"
                                        asp-items="@(ViewData["EstadoId"] as SelectList)">
                                    <option value="">Selecione um estado</option>
                                </select>
                            }
                            else
                            {
                                <div class="alert alert-danger">
                                    Nenhum estado disponível. Cadastre estados primeiro.
                                </div>
                            }
                            <span asp-validation-for="EstadoId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                            <button type="submit" class="btn btn-primary">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
