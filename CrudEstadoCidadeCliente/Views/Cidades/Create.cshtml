@model CrudEstadoCidadeCliente.Models.Cidade

@{
    ViewData["Title"] = "Cadastrar Nova Cidade";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-warning">
        @TempData["ErrorMessage"]
    </div>
}

<h1>Cadastrar Nova Cidade</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EstadoId" class="control-label">Estado</label>
                @if (ViewData["EstadoId"] != null)
                {
                    <select asp-for="EstadoId" class="form-control"
                            asp-items="@(ViewData["EstadoId"] as SelectList)">
                        <option value="">Selecione um estado</option>
                    </select>
                }
                else
                {
                    <div class="alert alert-danger">
                        Nenhum estado disponível. Cadastre estados primeiro.
                    </div>
                }
                <span asp-validation-for="EstadoId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>