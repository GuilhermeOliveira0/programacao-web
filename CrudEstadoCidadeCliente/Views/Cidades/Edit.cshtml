@model CrudEstadoCidadeCliente.Models.Cidade

@{
    ViewData["Title"] = "Editar Cidade";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Editar Cidade</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-3">Informações da Cidade</h4>
                    <hr />

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Cod" />

                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label fw-bold"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EstadoId" class="form-label fw-bold">Estado</label>
                            <select asp-for="EstadoId" class="form-select" asp-items="ViewBag.EstadoId"></select>
                            <span asp-validation-for="EstadoId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                            <button type="submit" class="btn btn-primary">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
