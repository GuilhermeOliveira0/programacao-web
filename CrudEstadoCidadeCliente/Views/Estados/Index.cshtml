@model IEnumerable<CrudEstadoCidadeCliente.Models.Estado>

@{
    ViewData["Title"] = "Estados";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Lista de Estados</h1>

    <p class="text-end">
        <a asp-action="Create" class="btn btn-success btn-lg">Novo Estado</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Sigla)</th>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Sigla)</td>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td class="action-buttons">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm text-white me-2">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white me-2">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm text-white">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
