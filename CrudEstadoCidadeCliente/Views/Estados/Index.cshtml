@model IEnumerable<CrudEstadoCidadeCliente.Models.Estado>

@{
    ViewData["Title"] = "Estados";
}

<div class="container mt-4">
    <h1>Lista de Estados</h1>

    <p>
        <a asp-action="Create" class="btn btn-success">Novo Estado</a>
    </p>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Sigla)</th>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Sigla)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td class="action-buttons">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>