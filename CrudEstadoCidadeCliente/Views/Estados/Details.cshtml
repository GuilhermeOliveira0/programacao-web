@model CrudEstadoCidadeCliente.Models.Estado

@{
    ViewData["Title"] = "Detalhes do Estado";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Detalhes do Estado</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-3">Informações</h4>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">
                            @Html.DisplayNameFor(model => model.Sigla)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Sigla)
                        </dd>

                        <dt class="col-sm-3 fw-bold">
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Voltar à Lista</a>
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
