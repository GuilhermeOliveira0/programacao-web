@model CrudEstadoCidadeCliente.Models.Estado

@{
    ViewData["Title"] = "Excluir Estado";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Excluir Estado</h1>

    @if (ViewData.ModelState[""]?.Errors.Count > 0)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(false)
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-danger mb-3">Tem certeza que deseja excluir este estado?</h4>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-3 fw-bold">
                            @Html.DisplayNameFor(model => model.Sigla)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Sigla)
                        </dd>

                        <dt class="col-sm-3 fw-bold">
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                    </dl>

                    <form asp-action="Delete" class="mt-4 d-flex justify-content-between">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                        <button type="submit" class="btn btn-danger">Excluir</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
